<Canvas x:Class="JoeChakra.Games.BVHole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="64" Width="64">
    <Polygon Fill="LightGray">
        <Polygon.Points>
            <PointCollection>
                <Point X="0" Y="0"/>
                <Point X="0" Y="64"/>
                <Point X="6" Y="58"/>
                <Point X="6" Y="6"/>
                <Point X="58" Y="6"/>
                <Point X="64" Y="0"/>
            </PointCollection>
        </Polygon.Points>
    </Polygon>
    <Border Canvas.Left="6" Canvas.Top="6"  Height="52" Width="52" Background="Gray">
        <Ellipse>
            <Ellipse.Fill>
                <RadialGradientBrush >
                    <GradientStop Color="Black"  Offset="0.0"/>
                    <GradientStop Color="Gray"  Offset="1.0"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Border>
</Canvas>
